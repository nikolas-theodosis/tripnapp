<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Start Trip"
            android:elevation="16dp"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginBottom="50dp"
            android:layout_alignBottom="@+id/btnStartTrip"
            android:layout_alignEnd="@+id/btnStartTrip"
            android:layout_marginEnd="26dp"
            android:id="@+id/textView10" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/train_main"
            android:id="@+id/imageView16"
            android:layout_alignTop="@+id/imageView17"
            android:layout_toEndOf="@+id/textView10" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/train_main"
            android:id="@+id/imageView17"
            android:layout_marginBottom="18dp"
            android:layout_alignBottom="@+id/btnStartTrip"
            android:layout_toStartOf="@+id/btnStartTrip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="About"
            android:elevation="16dp"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignBaseline="@+id/textView14"
            android:layout_alignBottom="@+id/textView14"
            android:layout_alignStart="@+id/imageView17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Exit"
            android:elevation="16dp"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginBottom="28dp"
            android:id="@+id/textView14"
            android:layout_alignBottom="@+id/btnExit"
            android:layout_alignStart="@+id/btnExit"
            android:layout_marginStart="23dp" />

        <TextView
            android:text="Never fall asleep again..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:id="@+id/textView15"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|italic" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@mipmap/arrow128"
            android:id="@+id/btnStartTrip"
            android:layout_marginTop="87dp"
            android:layout_below="@+id/textView15"
            android:layout_centerHorizontal="true" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@mipmap/arrow128"
            android:id="@+id/btnExit"
            android:layout_marginBottom="52dp"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/imageView16" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@mipmap/arrow128"
            android:id="@+id/btnAbout"
            android:src="@android:color/transparent"
            android:layout_marginEnd="20dp"
            android:layout_alignTop="@+id/btnExit"
            android:layout_toStartOf="@+id/btnStartTrip" />

    </RelativeLayout>
</LinearLayout>